{{#excel}}
 	<div class="d-flex justify-content-between">
 		<div class="d-inline-block">
        	<a href="{{{.}}}" class="btn btn-success mt-3">{{#str}} export, core_role {{/str}} (Excel)</a>
        	<a href="index.php" class="btn btn-primary mt-3">{{#str}}backtofilters, report_teachersession{{/str}}</a>
    	</div>
    </div>
{{/excel}}
<div class="table-responsive">
    <table class="table admintable generaltable align-middle" id="tblreport">
        <thead>
            <tr>
				{{#thead}}
					<th class="text-left align-middle">{{{.}}}</th>
				{{/thead}}
            </tr>
        </thead>
        <tbody>
			{{#rows}}
                <tr>
                    {{#.}}
						<td class="text-left">{{id}}</td>
						<td class="text-left">{{firstname}}</td>
						<td class="text-left">{{lastname}}</td>
						<td class="text-left">{{email}}</td>
						<td class="text-left">{{idcurso}}</td>
						<td class="text-left">{{fullname}}</td>
						<td class="text-left">{{shortname}}</td>
						<td class="text-left">{{namecategory}}</td>
						<td class="text-left">{{startdate}}</td>
						<td class="text-left">{{enddate}}</td>
						<td class="text-left">{{lastaccess}}</td>
						<td class="text-left" >{{timeaccess}}</td>
						<td class="text-left" style="background-color:{{qualified}};" bgcolor="{{qualified}}">{{activity}}</td>
						<td class="text-left" style="background-color:{{qualified}};" >{{diff}}</td>
						<td class="text-left">{{totalstudents}}</td>
						<td class="text-left">{{studentslogin}}</td>
						<td class="text-left">{{studentsnotlogin}}</td>						
					{{/.}}
				</tr>
			{{/rows}}
        <tbody>
    </table>
</div>

{{> report_ucnl/datatable_footer}}
<script>
new DataTable('#tblreport', {
    "paging": true,
	"searching": true,
	"info": true,
	"autoWidth": true,
	"scrollX": true,
	"lengthChange": true,
	"pageLength": 10,
	"lengthMenu": [10, 25, 50, 75, 100],
	"order": [[0, "asc"]],
});
</script>
